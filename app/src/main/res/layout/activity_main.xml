<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">



    <com.slide.unlock.SlideUnlockView
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:padding="10dp"
        app:duration="500"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeType="CIRCLE"
        app:thumbBgColor="@android:color/holo_green_dark"
        app:thumbSrc="@drawable/ic_arrow"
        app:thumbSrcTint="@android:color/white"
        app:trackBgColor="@android:color/holo_orange_dark"
        app:trackRoundCorner="50dp"
        app:unlockLockText="滑动解锁" />

</androidx.constraintlayout.widget.ConstraintLayout>